class Solution {
    public boolean checkInclusion(String s1, String s2) {
        
        char[] s1char = s1.toCharArray();
        Arrays.sort(s1char);

        String s1str = new String(s1char);

        int len = s1str.length();

        for(int i=0; i<=s2.length()-len; i++){
            
            String substr = s2.substring(i, i+len);
            char[] s2char = substr.toCharArray();
            Arrays.sort(s2char);
            String window = new String(s2char);

            if(s1str.equals(window)){
                return true;
            }
        }
        return false;
    }
}
